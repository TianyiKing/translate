{
  "manifest_version": 3,
  "name": "Premium Translator",
  "version": "1.0",
  "description": "A premium English to Chinese translator with TTS support.",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://translate.google.com/",
    "http://api.fanyi.baidu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}